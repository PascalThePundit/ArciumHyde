{
  "name": "arcium-privacy-platform",
  "version": "1.0.0",
  "description": "A comprehensive privacy-as-a-service platform combining encryption, zero-knowledge proofs, MPC, FHE, TEE, and blockchain integration",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:server\" \"npm run start:client\"",
    "start:server": "cd server && npm run dev",
    "start:client": "cd client && npm run dev",
    "build": "cd server && npm run build && cd ../client && npm run build && cd ../sdk && npm run build",
    "test": "cd server && npm run test && cd ../client && npm run test && cd ../sdk && npm run test",
    "test:server": "cd server && npm run test",
    "test:client": "cd client && npm run test",
    "test:sdk": "cd sdk && npm run test",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,md}\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docs": "cd docs && python -m http.server 8000"
  },
  "keywords": [
    "privacy",
    "encryption",
    "zero-knowledge",
    "zkp",
    "blockchain",
    "solana",
    "mpc",
    "fhe",
    "tee",
    "web3",
    "dapp"
  ],
  "author": "Arcium Team",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^8.2.2",
    "eslint": "9.38.0",
    "prettier": "^3.0.3",
    "typescript": "5.9"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.29.0",
    "@solana/spl-token": "^0.4.6",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-react": "^0.15.35",
    "@solana/web3.js": "^1.95.5",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.2",
    "bs58": "^5.0.0",
    "ts-node": "^10.9.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arcium/privacy-platform.git"
  },
  "bugs": {
    "url": "https://github.com/arcium/privacy-platform/issues"
  },
  "homepage": "https://github.com/arcium/privacy-platform#readme"
}
